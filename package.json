{
  "name": "notes-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "pretty": "prettier \"./**/*.{js,ts,tsx,html,json}\" --write",
    "check": "tsc -b && npm run lint && npm run pretty",
    "preview": "vite preview",
    "prepare": "husky",
    "dev:server": "bun run --watch server/main.ts",
    "dev": "concurrently --names \"client,server\" \"npm:dev:client\" \"npm:dev:server\"",
    "start": "NODE_ENV=production bun run server/main.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@mdxeditor/editor": "^3.28.0",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cm6-theme-nord": "^0.2.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "flexsearch": "^0.8.105",
    "hono": "^4.7.5",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.3.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "^1.2.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^0.21.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "es5-ext",
      "esbuild"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,html,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
